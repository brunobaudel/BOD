<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:background="@drawable/balao_anuncio"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:minWidth="150dip"
    android:orientation="vertical"
    android:paddingBottom="35dip"
    android:paddingLeft="5dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip" >

    <LinearLayout
        android:id="@+id/balloon_inner_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/balloon_inner_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:focusable="false"
                android:focusableInTouchMode="false" >
            </ImageView>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/est"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Estação"
                    android:textColor="#FFF"
                    android:textSize="16dip" >
                </TextView>

                <TextView
                    android:id="@+id/tvNumEstacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="01"
                    android:textColor="#FFF"
                    android:textSize="20dip" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvNomeEstacao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:layout_toRightOf="@+id/iv"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Nome da Estação"
                android:textColor="#FFF"
                android:textSize="16dip" >
            </TextView>

            <Button
                android:id="@+id/btnVerRotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="Rotas"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvEnderecoEstacao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Endereço da estação"
        android:textColor="#FFF"
        android:textSize="12dip" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tvBicicletasDisponiveis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvVagasLivres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDiponibilidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Estação Diponível"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>